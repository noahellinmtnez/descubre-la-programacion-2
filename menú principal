void imagenExit (){
  fill(76,245,241);
  rect (10,10,10,10);
  fill(0,0,0);
  textSize(10);
  text("Exit", 21,20);
}
void controlExit (){
  //background(255,255,255);
  println ("X: " + mouseX);
  println ("Y: " + mouseY);
  if (mousePressed){
    if (mouseButton == LEFTBUTTON){
      if (mouseX > 10 && mouseX < 20 && mouseY > 10 && mouseY < 20){
    background(75,174,255) ;
      animate (menu);

      }}}}
void play (){
  background(255,131,249);
  imagenExit();
  controlExit();
       if(mousePressed){}
       if (mouseButton == LEFTBUTTON) {
        }}

