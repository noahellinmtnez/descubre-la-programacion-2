void main (){
  animate (menu) ;
}
void menu () {
  
  controlBTN1 ();
  imagenBTN1 ();
  controlBTN2 ();
  imagenBTN2 ();
  controlBTN3 ();
  imagenBTN3();

}
void imagenBTN1 (){
  fill(48,234,239);
  rect (120,120,80,80);
  fill(0,0,0);
  textSize(15);
  text("PLAY", 137,170);
}
void controlBTN1 (){
  background(255,255,255);
  println ("X: " + mouseX);
  println ("Y: " + mouseY);
  if (mousePressed){
    if (mouseButton == LEFTBUTTON){
      if (mouseX > 120 && mouseX < 200 && mouseY > 120 && mouseY < 200){
    background(75,174,255) ;
      animate (play);
      }}}}

